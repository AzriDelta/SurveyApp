<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qna_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/generate_surveyTitle"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="13dp"
    android:layout_marginTop="19dp"
    android:layout_marginEnd="13dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:hint="Question appears here."
        android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:autofillHints="Your answer here."
        android:fontFamily="casual"
        android:hint="Your answer"
        android:inputType="textMultiLine"
        android:textAppearance="@android:style/TextAppearance.Material.Large.Inverse"
        android:textColor="@color/colorBlack" />

</LinearLayout>
